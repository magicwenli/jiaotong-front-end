{
    "settings": {
	    "stylelint.config": {
	      "extends": ["stylelint-config-standard"],
	      "rules": {
	        "at-rule-no-unknown": [
	          true,
	          {
	            "ignoreAtRules": [
	              "tailwind",
	              "layer",
	              "apply",
	              "variants",
	              "responsive",
	              "screen"
	            ]
	          }
	        ],
	      }
	    }
    },
    "css.validate": false,
    "editor.quickSuggestions": {
        "strings": true
    },
    "tailwindCSS.includeLanguages": {
        "vue": "vue"
    },
}